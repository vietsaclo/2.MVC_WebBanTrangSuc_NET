@{
    ViewBag.Title = "themTK";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container-fluid login-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <form action="@Url.Action("XlyThemTK")" method="post">
                    <div class="container login-table">
                        <h1>ADD ACCOUNT</h1>
                        <hr />
                        <label for="username"><b>User Name</b></label>
                        <input type="text" name="username" required />
                        <label for="pass"><b>Pass Word</b></label>
                        <input type="password" name="pass" required />
                        <label for="fullname"><b>Full Name</b></label>
                        <input type="text" name="fullname" required />
                        <label for="email"><b>Email Address</b></label>
                        <input type="text" name="email" required />
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="phanquyen" id="exampleRadios1" value="1" checked>
                                <label class="form-check-label" for="phanquyen">
                                    Admin
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="phanquyen" id="exampleRadios2" value="0">
                                <label class="form-check-label" for="phanquyen">
                                    User
                                </label>
                            </div>
                        </div>
                        <input type="submit" value="SAVE" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

